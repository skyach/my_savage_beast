<% @page_title = "ViewGuide Forum > #{@forum.name} > Create Topic" %>
<% @page_id = "forum" %>
<%= content_for :page_stylesheet do %>
  <%= stylesheet_link_tag 'forum' %>
<% end %>

<div id="content-left">
  <%= error_messages_for :post %>
  <%= error_messages_for :topic %>

  <div class="crumbs" xstyle="margin-top:1.1em;">
    <%= link_to t(:forums_title), forums_path %> <span class="arrow">&rarr;</span>
    <%= link_to h(@forum.name), forum_path(@forum) %> <span class="arrow">&rarr;</span>
  </div>
  <div style="clear: both;"></div>

  <div id="forum-block" class="bchip">
    <div class="widget-wrap">
      <h2 id="new_topic" class="chip-header"><em><%= 'New Topic' %></em></h2>
      <div id="info-widget">
        <%= t(:by_user, user: current_user.display_name) %>
      </div>
    </div>
    <div class="inner">
      <%= form_for :topic, :url  => topics_path(@forum) do |f| -%>
        <%= render partial: "form", locals: {form: f} %>
        <div class="button-container">
          <%= submit_tag 'Post Topic', :or => link_to('Cancel', forum_path(@forum)) %>
        </div>
      <% end -%>
      <%= javascript_tag "$('topic_title').focus();" %>
    </div>
    <div class="bottom-cap"></div>
  </div>

  <div id="bottom-ads">
    <div class="ad-728-90"><%= ad_chip('forum-1') %></div>
  </div>
</div>

<div id="content-right">
  <div id="side-ad-top" class="ad-160-600"><%= ad_chip('forum-2') %></div>
  <div class="ad-160-600"><%= ad_chip('forum-3') %></div>
</div>